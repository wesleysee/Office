<p id="notice"><%= notice %></p>

<h1>Weekly Report (<%= @start_date %> to <%= @end_date %>)</h1>

<% if @excel_exists %>
  <%= @excel_file %>
<% end %>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Days</th>
    <th>Regular Pay</th>
    <th>Allowance Pay</th>
    <th>Total Pay</th>
    <th></th>
  </tr>

  <% @records.each do |record| %>
    <tr>
      <td><%= record["name"] %></td>
      <td><%= record["days"] %></td>
      <td><%= record["regular_pay"] %></td>
      <td><%= record["allowance_pay"] %></td>
      <td><%= record["total_pay"] %></td>
      <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, employee_path(record["id"]) %></td>
    </tr>
  <% end %>

</table>

<%= paginate @pages, :theme => 'twitter-bootstrap' %>

<br />

<%= link_to 'Back', employees_path %>