<p id="notice"><%= notice %></p>

<h1>Monthly Report (<%= @start_date %> to <%= @end_date %>)</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Hours</th>
    <th>Regular Pay</th>
    <th>Allowance Pay</th>
    <th>Total Pay</th>
    <th></th>
  </tr>

  <% @records.each do |record| %>
    <tr>
      <td><%= record["name"] %></td>
      <td><%= record["hours"] %></td>
      <td><%= record["regular_pay"] %></td>
      <td><%= record["allowance_pay"] %></td>
      <td><%= record["total_pay"] %></td>
      <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, employee_path(record["id"]) %></td>
    </tr>
  <% end %>

</table>

<%= paginate @pages, :theme => 'twitter-bootstrap' %>

<br />

