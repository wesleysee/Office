<p id="notice"><%= notice %></p>

<h1>Listing Biometric Machine Time Records</h1>

<%= form_tag ta_record_infos_path, :method => :get, :remote=>true, :id => "ta_record_infos_search" do %>

<div class="row-fluid">
  <div class="span4">
    <div class="input-append">
      <p>
        <%= text_field_tag :search, params[:search] %>&#160;&#160;&#160;
        <%= submit_tag "Search", :name => nil, :class => "btn" %>
      </p>
    </div>
  </div>
  <div id="paginator" class="span8" style="text-align: right">
    <%= page_entries_info @ta_record_infos %>
    <%= paginate @ta_record_infos, :remote => true %>
  </div>
  </div>
<br/>
<table class="table pretty">
  <tr id="headers">
    <%= render 'headers' %>
  </tr>

  <tbody id="ta_record_infos">
    <%= render @ta_record_infos %>
  </tbody>
</table>
<% end %>

<br />

<%= link_to 'New Time Record', new_ta_record_info_path %> |
<%= link_to 'Back', employees_path %>

