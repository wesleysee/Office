<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span4">
    <h3>Trucking Information</h3><br/>
    <table class="table">
      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Name</td>
        <td style="border: 0"><strong><%= @trucking.name %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Address</td>
        <td style="border: 0"><strong><%= @trucking.address %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Phone Number</td>
        <td style="border: 0"><strong><%= @trucking.phone %></strong></td>
