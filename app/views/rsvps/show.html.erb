<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span4">
    <h3>RSVP Information</h3><br/>
    <table class="table">
      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">First Name</td>
        <td style="border: 0"><strong><%= @rsvp.first_name %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Last Name</td>
        <td style="border: 0"><strong><%= @rsvp.last_name %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Email</td>
        <td style="border: 0"><strong><%= @rsvp.email %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Phone Number</td>
        <td style="border: 0"><strong><%= @rsvp.phone %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Guests</td>
        <td style="border: 0"><strong><%= @rsvp.guests %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Attending?</td>
        <td style="border: 0"><strong><%= @rsvp.attending %></strong></td>
      </tr>

      <tr>
      <td style="border: 0; text-align: right; padding-right: 30px;">Notes</td>
      <td style="border: 0"><strong><%= @rsvp.notes %></strong></td>
    </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Questions</td>
        <td style="border: 0"><strong><%= @rsvp.questions %></strong></td>
      </tr>
    </table>
  </div>
</div>

<br/>

<div class="row-fluid">
  <div class="span12">
    <%= link_to 'Edit', edit_rsvp_path(@rsvp) %> |
    <%= link_to 'Back', rsvps_path %>
  </div>
</div>