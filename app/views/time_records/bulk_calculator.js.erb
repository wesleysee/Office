<% if not @holiday.nil? %>
$('#holiday_note').html("Note: Date is a holiday (<%= @holiday.name %>) with multiplier <%= @holiday.multiplier %>")
<% else %>
$('#holiday_note').html("")
<% end %>
<% for time_record in @time_records %>
$("#regular_time_<%= time_record.employee_id %>").html("<%= time_record.regular_time %>")
$("#overtime_<%= time_record.employee_id %>").html("<%= time_record.overtime %>")
$("#regular_pay_<%= time_record.employee_id %>").html("<%= number_with_precision time_record.regular_service_pay, :precision => 2 %>")
$("#overtime_pay_<%= time_record.employee_id %>").html("<%= number_with_precision time_record.overtime_pay, :precision => 2 %>")
$("#allowance_pay_<%= time_record.employee_id %>").html("<%= number_with_precision time_record.allowance_pay, :precision => 2 %>")
$("#total_pay_<%= time_record.employee_id %>").html("<%= number_with_precision time_record.total_pay, :precision => 2 %>")
<% end %>
