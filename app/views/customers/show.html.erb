<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span4">
    <h3>Customer Information</h3><br/>
    <table class="table">
      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Name</td>
        <td style="border: 0"><strong><%= @customer.name %></strong></td>
      </tr>
    </table>
  </div>
</div>

<div class="row-fluid">
  <div class="span8">
    <% if @customer.customer_deliveries.any? %>
      <h3>Deliveries</h3><br/>
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>Delivery Method</th>
          <th>Trucking</th>
          <th>Notes</th>
        </tr>
        </thead>
        <tbody>
        <% @customer.customer_deliveries.each do |customer_delivery| %>
          <tr>
            <td><%= customer_delivery.delivery_method %></td>
            <td><%= customer_delivery.trucking.name if not customer_delivery.trucking.nil? %></td>
            <td><%= customer_delivery.notes %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

<br/>

<div class="row-fluid">
  <div class="span8">
    <h3>Products</h3><br/>
    <% if @customer.customer_products.any? %>
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
        </tr>
        </thead>
        <tbody>
        <% @customer.customer_products.each do |customer_product| %>
          <tr>
            <td><%= customer_product.product_name %></td>
            <td><%= customer_product.price %> per <%= customer_product.unit %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

<br/>

<div class="row-fluid">
  <div class="span12">
    <%= link_to 'Edit', edit_customer_path(@customer) %> |
    <%= link_to 'Back', customers_path %>
  </div>
</div>