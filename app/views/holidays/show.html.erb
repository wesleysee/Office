<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span4">
    <h3>Holiday Information</h3><br/>
    <table class="table">
      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Date</td>
        <td style="border: 0"><strong><%= @holiday.date %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Name</td>
        <td style="border: 0"><strong><%= @holiday.name %></strong></td>
      </tr>

      <tr>
        <td style="border: 0; text-align: right; padding-right: 30px;">Type</td>
        <td style="border: 0"><strong><%= @holiday.type %></strong></td>
      </tr>
    </table>
  </div>
</div>

<br/>

<div class="row-fluid">
  <div class="span12">
    <%= link_to 'Edit', edit_holiday_path(@holiday) %> |
    <%= link_to 'Back', holidays_path %>
  </div>
</div>